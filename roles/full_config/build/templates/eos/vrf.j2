vrf instance {{ vrf["name"] }}
!
   {% endif %}
   {% if devices[0]["device_role"]["slug"] == 'leaf' %}
      {% if vrf["tenant"] != None %}
         {% if tenant in vrf["tenant"]["slug"] %}
vrf instance {{ vrf["name"] }}
!
         {% endif %}
      {% endif %}
   {% endif %}
{% endfor %}