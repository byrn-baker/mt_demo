{% include './junos/interfaces.j2' %}

policy-options {
    policy-statement ecmp_policy {
        term 10 {
            then accept;
        }
    }
}
router-options {
    {% for iface in devices[0]["interfaces"] %}
        {% if iface["name"] == 'lo0' %}
            {% for addr in iface["ip_addresses"] %}
                {% if addr["description"] == "unit 0" %}
    router-id {{ addr["address"] | ipaddr('address') }};
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}
    autonomous-system {{ devices[0]["local_asn"] }};
    forwarding-table {
        export ecmp_policy;
        ecmp-fast-reroute;
    }
}
routing-instances {
    mgmt_junos {
        description inband_mgmt;
        routing-options {
            static {
                route 0.0.0.0/0 next-hop {{ devices[0]["config_context"]["routes"]["mgmt_gateway"] }};
            }
        }
    }
}
